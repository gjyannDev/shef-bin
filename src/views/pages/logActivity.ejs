<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recent Activity</title>
    <link rel="stylesheet" href="/output.css" />
  </head>
  <body class="bg-[var(--base-white)] text-[var(--base-black)]">
    <%- include('../partials/header') %>
    <main class="container flex flex-col gap-8 mx-auto px-15 mt-16">
      <h1 class="font-extrabold text-4xl max-w-lg leading-[1.3]">
        Log Activity
      </h1>
      <div class="flex flex-col gap-4">
        <% logs.forEach(activity => { %>
        <div
          class="flex justify-between gap-4 border py-5 px-4 rounded-lg shadow-md"
        >
          <p class=""><%= activity.details %></p>
          <p class=""><%= activity.formattedTime %></p>
        </div>
        <% }); %>
      </div>
    </main>
  </body>
</html>
