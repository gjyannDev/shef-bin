<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Items</title>
    <link rel="stylesheet" href="/output.css" />
  </head>
  <body class="bg-[var(--base-white)] text-[var(--base-black)]">
    <%- include('../partials/header') %>

    <main class="container flex flex-col mx-auto px-15 mt-6">
      <div class="flex flex-col gap-6">
        <a href="/" class="w-fit text-lg hover:underline">‚Üê Back</a>
        <h1 class="font-extrabold text-4xl max-w-lg leading-[1.3]">
          Add New Item
        </h1>
      </div>
      <form method="POST" action="/items/add" class="flex flex-col gap-8 py-14">
        <div class="w-full max-w-3xl flex flex-col lg:flex-row gap-6">
          <div class="flex flex-col gap-2 flex-1">
            <label for="itemName" class="font-bold text-lg">Item Name</label>
            <input
              id="itemName"
              type="text"
              name="itemName"
              placeholder="Chicken Breast"
              class="h-12 rounded-sm shadow-md px-4 border border-gray-300 placeholder:text-[var(--base-black)] focus:ring-2"
              required
            />
          </div>

          <div class="flex flex-col gap-2 flex-1">
            <label for="category" class="font-bold text-lg">Category</label>
            <div class="relative">
              <select
                id="category"
                name="category"
                class="h-12 w-full appearance-none rounded-sm shadow-md border border-gray-300 px-4 pr-10 focus:ring-2 bg-white text-[var(--base-black)]"
                required
              >
                <option value="" disabled selected>Select a category</option>
                <option value="meat">Meat</option>
                <option value="vegetable">Vegetable</option>
                <option value="dairy">Dairy</option>
                <option value="beverage">Beverage</option>
                <option value="snack">Snack</option>
              </select>

              <!-- Chevron icon -->
              <div
                class="pointer-events-none absolute inset-y-0 right-3 flex items-center"
              >
                <svg
                  class="w-4 h-4 text-gray-500"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.06 1.06l-4.24 4.25a.75.75 0 01-1.06 0L5.21 8.27a.75.75 0 01.02-1.06z"
                    clip-rule="evenodd"
                  />
                </svg>
              </div>
            </div>
          </div>
        </div>
        <div class="w-full max-w-3xl flex flex-col lg:flex-row gap-6">
          <div class="flex flex-col gap-2 flex-1">
            <label for="quantity" class="font-bold text-lg">Quantity</label>
            <div class="flex gap-2">
              <input
                id="quantity"
                type="text"
                name="quantity"
                placeholder="1 kg"
                class="h-12 rounded-sm shadow-md px-4 border border-gray-300 placeholder:text-[var(--base-black)] focus:ring-2"
                required
              />
              <div class="relative">
                <select
                  id="unit"
                  name="unit"
                  class="h-12 appearance-none rounded-sm shadow-md border border-gray-300 px-4 pr-10 focus:ring-2 bg-white text-[var(--base-black)]"
                  required
                >
                  <option value="" disabled selected>Select a unit</option>
                  <option value="pcs">pcs</option>
                  <option value="pc">pc</option>
                  <option value="kg">kg</option>
                  <option value="g">g</option>
                  <option value="l">l</option>
                  <option value="ml">ml</option>
                  <option value="packs">packs</option>
                  <option value="bottles">bottles</option>
                  <option value="bunch">bunch</option>
                </select>

                <!-- Chevron icon -->
                <div
                  class="pointer-events-none absolute inset-y-0 right-3 flex items-center"
                >
                  <svg
                    class="w-4 h-4 text-gray-500"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.06 1.06l-4.24 4.25a.75.75 0 01-1.06 0L5.21 8.27a.75.75 0 01.02-1.06z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </div>
              </div>
            </div>
          </div>
          <div class="flex flex-col gap-2 flex-1">
            <label for="expirationDate" class="font-bold text-lg"
              >Expiration Date</label
            >
            <input
              id="expirationDate"
              type="date"
              name="expirationDate"
              placeholder="june 6, 2026"
              class="h-12 rounded-sm shadow-md px-4 border border-gray-300 placeholder:text-[var(--base-black)] focus:ring-2"
              required
            />
          </div>
        </div>
        <div class="w-full max-w-3xl flex flex-col lg:flex-row gap-6">
          <div class="flex flex-col gap-2 flex-1">
            <label for="notes" class="font-bold text-lg">Notes</label>
            <textarea
              id="notes"
              placeholder="Write your notes here...."
              rows="4"
              name="notes"
              class="w-full max-w-lg rounded-sm shadow-md placeholder:text-[var(--base-black)] focus:ring-2 border border-gray-300 lg:max-w-sm px-4 py-3 resize-none"
              required
            ></textarea>
          </div>
          <div class="flex flex-col gap-2 flex-1">
            <label for="status" class="font-bold text-lg">Status</label>
            <div class="relative">
              <select
                id="status"
                name="status"
                class="h-12 w-full appearance-none rounded-sm shadow-md border border-gray-300 px-4 pr-10 focus:ring-2 bg-white text-[var(--base-black)]"
                required
              >
                <option value="" disabled selected>Select a status</option>
                <option value="in stock">In Stock</option>
                <option value="low stock">Low Stock</option>
                <option value="expired">Expired</option>
                <option value="out of stock">Out of Stock</option>
              </select>

              <!-- Chevron icon -->
              <div
                class="pointer-events-none absolute inset-y-0 right-3 flex items-center"
              >
                <svg
                  class="w-4 h-4 text-gray-500"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.06 1.06l-4.24 4.25a.75.75 0 01-1.06 0L5.21 8.27a.75.75 0 01.02-1.06z"
                    clip-rule="evenodd"
                  />
                </svg>
              </div>
            </div>
          </div>
        </div>

        <div class="flex gap-8">
          <button
            class="w-fit font-semibold bg-[var(--base-white)] px-5 py-3 rounded-sm cursor-pointer"
          >
            <a href="/">Cancel</a>
          </button>
          <button
            class="w-fit font-semibold bg-[var(--primary-clr)] px-8 py-2 rounded-sm cursor-pointer"
          >
            Add Item
          </button>
        </div>
      </form>
    </main>
  </body>
</html>
